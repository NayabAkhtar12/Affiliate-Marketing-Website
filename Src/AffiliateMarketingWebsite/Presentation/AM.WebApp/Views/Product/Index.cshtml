@model IEnumerable<AM.Business.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

}

<div class="header-title text-center">
    <h3 class="title-w3l mb-lg-5">
         Products
    </h3>
</div>
